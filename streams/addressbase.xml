<?xml version="1.0" encoding="UTF-8"?>
<joins>
	<mongodb.sink>
		<sink collection="City" topic="@CitiesWithCountry"/>
		<sink collection="CitiesPerCountry" topic="@CitiesPerCountry"/>
	</mongodb.sink>
	<direct>
		<groupedStore name="citybycountry" from="DVDS-city" key="country_id"/>
		<joinGrouped name="citieswcountry" from="citybycountry" with="DVDS-country" columns="country" to="@CitiesWithCountry" optional="true"/>
	</direct>
</joins>